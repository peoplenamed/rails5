  %a{:href => edit_user_registration_path, :style => "margin-left:20px;", :class => 'navbar-link'}
    %span{ class: "fa fa-user-astronaut"}
    = current_user.email

  %a{"data-confirm" => "Are you sure?", "data-method" => "delete", :href => destroy_user_session_path, :rel => "nofollow"}
